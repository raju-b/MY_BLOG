<h1>Listing Posts</h1>
<div class="container">

<table>
  <tr>
    <th>Title</th>
    <th>description</th>
    <th>image</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= image_tag post.image.url,:size => "100x100" %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <% if post.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to "destory",post_path(post), method: 'delete',
                          data: {confirm: 'Are you sure'} %></td>
      <% end %>  
    </tr>

  <% end %>

</table>
<p><%= link_to "NewPost",new_post_path,method: 'get'%></p>

</div>