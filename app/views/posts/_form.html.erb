
  <div class="col-md-4 col-md-offset-4">
  <div class = "well">
<%if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |mess| %>
    
      <li><%= mess %></li>
  </ul>
     <% end %>
<% end %>
  <legend class="scheduler-border">
<%#= form_with(model: @post, local: true) do |form| %>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>
  <div class="form-group">
    <label>
      <%= form.label :title %><br>
      <%= form.text_field :title, autofocus: true,class: "form-control" %>
    </label>
  </div>
  <div  class="form-group">
    <label>
      <%= form.label :image %>
      <%= form.file_field :images_attributes, multiple: true, name: "[post][images_attributes][]",  class: "form-control"%>
    </label>  
  </div >
  <label>
  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description, class: "form-control" %>
  </div>
</label>
</legend>
 <span>
  <div class = "form-actions">
    <%= form.submit "Post", class: "btn btn-primary" %>
    <%= link_to "Back",posts_path,class: "btn btn-info "%></div>
  </span>		
<% end %>
</div>
</div>


